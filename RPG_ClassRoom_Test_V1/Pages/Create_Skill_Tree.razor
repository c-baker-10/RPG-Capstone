@page "/c_s_m"
@using Objects

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@node.name</button>

@code {
    private int currentCount = 10;

    Node node = new Node();

    private void IncrementCount()
    {
        currentCount++;
    }
}
